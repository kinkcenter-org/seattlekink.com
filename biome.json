{
  "$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "!node_modules",
      "!.next",
      "!dist",
      "!build",
      "!.test.ts",
      "!.test.tsx",
      "!public",
      "!jest.setup.tsx"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "noStaticElementInteractions": "warn",
        "useKeyWithClickEvents": "warn",
        "useValidAnchor": "warn"
      },
      "nursery": {
        "useExhaustiveSwitchCases": "error"
      },
      "recommended": true,
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noUnknownAtRules": "warn"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  }
}
